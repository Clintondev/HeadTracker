<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo de IP -->
        <EditText
            android:id="@+id/editTextIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP do PC (ex: 192.168.1.9)"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Botão de calibrar posição neutra -->
        <Button
            android:id="@+id/buttonCalibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibrar Posição Neutra"
            android:layout_marginBottom="12dp" />

        <!-- Label que mostra o percentual de suavização -->
        <TextView
            android:id="@+id/textSmoothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoothing: 10%"
            android:layout_marginBottom="4dp" />

        <!-- SeekBar para ajustar smoothing -->
        <SeekBar
            android:id="@+id/seekBarSmoothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Visualização dos eixos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaw (–180° a +180°)" />
        <ProgressBar
            android:id="@+id/yawBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:max="360"
            android:progress="180"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pitch (–90° a +90°)" />
        <ProgressBar
            android:id="@+id/pitchBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:max="180"
            android:progress="90"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll (–180° a +180°)" />
        <ProgressBar
            android:id="@+id/rollBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:max="360"
            android:progress="180"
            android:layout_marginBottom="16dp"/>

        <!-- Botão de iniciar envio -->
        <Button
            android:id="@+id/buttonStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar" />

    </LinearLayout>
</ScrollView>
